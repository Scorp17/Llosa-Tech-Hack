    echo -e "│\033[1;36mAUTOR: \033[1;37mJosue Llosa \033[1;36mPROGRAMADOR: \033[1;37mJosue Llosa\033[1;34m │"
    echo -e "│\033[1;35mIG:    \033[1;37mscorpcc17   \033[1;32mFB:          \033[1;37mScorp Clavel\033[1;34m│"
    echo -e "└────────────────────────────────────────────┘\033[0m"
}

baner' > ~/.bashrc

echo -e "\033[1;36mCONCEDIENDO PERMISO\033[0m"
termux-setup-storage

echo -e "\033[1;36mACTUALIZANDO LOS PAQUETES\033[0m"
pkg update && pkg upgrade -y

echo -e "\033[1;36mINSTALANDO PERL\033[0m"
pkg install perl -y

echo -e "\033[1;36mINSTALANDO CURL\033[0m"
pkg install curl -y

echo -e "\033[1;36mINSTALANDO PYTHON\033[0m"
pkg install python -y

echo -e "\033[1;36mINSTALANDO FFMPEG\033[0m"
pkg install ffmpeg -y

echo -e "\033[1;36mINSTALANDO YT-DLP\033[0m"
pip install -U --no-deps yt-dlp

echo -e "\033[1;36mACTUALIZANDO YT-DLP\033[0m"
pip install -U "yt-dlp[default]"

echo -e "\033[1;36mINSTALANDO NCURSES-UTILS BC\033[0m"
pkg install ncurses-utils bc

echo '#include <stdlib.h>'                  >  llosa-hack.c
